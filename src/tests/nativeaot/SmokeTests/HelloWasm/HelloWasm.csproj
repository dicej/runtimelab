<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <CLRTestKind>BuildAndRun</CLRTestKind>

    <!-- IL3049 warns about mismatched signatures; we are intentionally testing they are handled correctly
         when the definition is statically linked -->
    <NoWarn>$(NoWarn);IL3049;CS8500</NoWarn>
    <CLRTestExitCode>0</CLRTestExitCode>
    <RequiresProcessIsolation>true</RequiresProcessIsolation>
    <ReferenceXUnitWrapperGenerator>false</ReferenceXUnitWrapperGenerator>
    <CLRTestTargetUnsupported Condition="'$(TargetsWasm)' != 'true'">true</CLRTestTargetUnsupported>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="HelloWasm.cs" />
    <Compile Include="LSSATests.cs" />
    <Compile Include="ExceptionHandlingTests.Common.cs" />

    <CMakeProjectReference Include="CMakeLists.txt" />
  </ItemGroup>

  <ItemGroup>
    <DirectPInvoke Include="xyz!SimpleDirectPInvokeTestFunc" />
    <DirectPInvoke Include="ModuleName1!CommonWasmImportFunctionName" />
    <DirectPInvoke Include="StaticModule1" />
    <DirectPInvoke Include="StaticModule2" />
    <DirectPInvoke Condition="'$(TargetsBrowser)' == 'true'" Include="js" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="HelloWasm.IL.ilproj" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetsBrowser)' == 'true'">
    <LinkerArg Include="--pre-js &quot;$(MSBuildProjectDirectory)/shell.js&quot;" />
  </ItemGroup>

  <PropertyGroup Condition="'$(TargetsBrowser)' == 'true'">
    <EmccExtraArgs>-sENVIRONMENT=web,node,shell --js-library $(MSBuildProjectDirectory)/dotnet_support.js --pre-js $(MSBuildProjectDirectory)/Microsoft.JSInterop.js --post-js $(MSBuildProjectDirectory)/HelloWasm.js</EmccExtraArgs>
  </PropertyGroup>

  <ItemGroup>
    <!-- LSSA tests are currently not compatible with precise virtual unwind frames. TODO-LLVM: ignore virtual unwind
         frames in the LSSA's allocation result reporting and enable these back. -->
    <IlcArg Include="--codegenopt:JitRunLssaTests=1" Condition="'$(TargetOS)' != 'wasi' and '$(IlcWasmMethodLevelVirtualUnwindModel)' != 'precise'" />
  </ItemGroup>
</Project>
